<UserControl x:Class="PathDataDisplayer.Controls.IconsDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PathDataDisplayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal"
                    Margin="10">

            <!-- Button label -->
            <TextBlock Text="Select a file with geometry paths "
                       FontSize="20"/>

            <!-- Browse button -->
            <Button Content="Browse"
                    FontSize="18"
                    Width="100"
                    Margin="10 0 0 0"
                    Command="{x:Static local:Commands.BrowseCommand}"/>
        </StackPanel>

        <!-- Icons -->
        <ListBox Grid.Row="1" Style="{DynamicResource Public.Paths.ListBox}"/>

    </Grid>
</UserControl>
